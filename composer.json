{
    "name": "daalupay/api",
    "type": "project",
    "description": "The API for the DaaluPay Project.",
    "version": "0.0.1",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "darkaonline/l5-swagger": "^8.6",
        "doctrine/dbal": "^4.2",
        "fakerphp/faker": "^1.24",
        "laravel/framework": "^11.9",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "resend/resend-php": "^0.14.0",
        "sentry/sentry-laravel": "^4.10",
        "unicodeveloper/laravel-paystack": "^1.2",
        "zircote/swagger-php": "^4.11"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.65",
        "laravel/breeze": "^2.2",
        "laravel/pail": "^1.1",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "pestphp/pest": "^3.5",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/phpstan": "^2.0",
        "squizlabs/php_codesniffer": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "DaaluPay\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
         "cghooks": "vendor/bin/cghooks",
         "code:analyze": "vendor/bin/phpstan analyze",
        "code:check": "vendor/bin/phpcs --standard=PSR12 app/ bootstrap/cache/ config/ database/ public/ routes/ tests/",
        "code:fix": "vendor/bin/phpcbf app/ bootstrap/cache/ config/ database/ public/ routes/ tests/",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
   
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
         "hooks": {
            "config": {
                "stop-on-failure": ["pre-push"]
            },
            "pre-commit": [
                "echo committing as $(git config user.name)",
                "composer:code:fix"
            ],
            "commit-msg": "grep -q '[A-Z]+-[0-9]+.*' $1",
            "pre-push": [
                "composer code:fix"
            ],
            "post-merge": "composer install"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
